<%= form_with(model: @property, local: true, url: properties_path) do |form| %>
  <div class="property_name">
    <%= form.label :物件名 %>
    <%= form.text_field :property_name %>
  </div>

  <div class="rent">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>
  </div>

  <div class="address">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="building_age">
    <%= form.label :築年数 %>
    <%= form.text_field :building_age %>
  </div>

  <div class="note">
    <%= form.label :備考 %>
    <%= form.text_field :note %>
  </div>

  <% @num = 0 %>
  <%= form.fields_for :transportations do |form| %>
  <h3>最寄り駅<%= @num += 1 %></h3>
  <div class="line_name">
    <%= form.label :路線名 %>
    <%= form.text_field :line_name %>
  </div>
  <div class="station_name">
    <%= form.label :駅名 %>
    <%= form.text_field :station_name %>
  </div>
  <div class="walking_distance">
    <%= form.label :徒歩分数 %>
    <%= form.text_field :walking_distance %>
  </div>
  <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>